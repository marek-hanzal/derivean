{
	"version": "1.0.10",
	"name": "@use-pico2/selection",
	"description": "Common selection stuff.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/use-pico2/pico"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"sideEffects": false,
	"type": "module",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"types": "src/index.ts",
	"files": [
		"src"
	],
	"scripts": {
		"build": "concurrently npm:build:*",
		"build:esbuild": "node esbuild.mjs",
		"build:types": "tsc --outDir lib",
		"lint": "eslint src",
		"cleanup": "concurrently npm:cleanup:*",
		"cleanup:sdk": "del-cli src/sdk/**",
		"cleanup:lib": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
	},
	"dependencies": {
		"@use-pico2/query": "^1.0.13",
		"@use-pico2/store": "^1.0.10",
		"@use-pico2/utils": "^1.0.24"
	},
	"devDependencies": {
		"@use-pico2/esbuild": "^1.0.8",
		"@use-pico2/eslint-config-eslint": "^1.0.10",
		"@use-pico2/tsconfig": "^1.0.10",
		"@types/node": "^20.4.9",
		"concurrently": "^8.2.0",
		"del-cli": "^5.0.0",
		"eslint": "^8.46.0",
		"typescript": "^5.2.2"
	},
	"bugs": {
		"url": "https://github.com/use-pico2/pico/issues"
	},
	"homepage": "https://github.com/use-pico2/pico#readme"
