{
	"version": "3.0.0",
	"name": "@use-pico/server",
	"description": "All the shiny server-side stuff.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/use-pico/pico"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"sideEffects": false,
	"type": "module",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"types": "src/index.ts",
	"files": [
		"src"
	],
	"scripts": {
		"build": "concurrently npm:build:*",
		"build:esbuild": "node esbuild.mjs",
		"build:types": "tsc --outDir lib",
		"lint": "eslint src",
		"cleanup": "concurrently npm:cleanup:*",
		"cleanup:lib": "del-cli .turbo lib tsconfig.tsbuildinfo src/**/*.{d.ts,d.ts.map,js,js.map}"
	},
	"dependencies": {
		"@auth/kysely-adapter": "^0.1.5",
		"@phenomnomnominal/tsquery": "^6.1.3",
		"ioredis": "^5.3.2",
		"pumpit": "^4.1.1",
		"winston": "^3.11.0",
		"yaml": "^2.3.4"
	},
	"peerDependencies": {
		"@use-pico/client": "^3.0.0",
		"@use-pico/extras": "^3.0.0",
		"@use-pico/schema": "^3.0.0",
		"kysely": "^0.26.3",
		"next": "^14.0.3",
		"next-auth": "^4.24.5"
	},
	"devDependencies": {
		"@use-pico/esbuild": "^2.0.5",
		"@use-pico/eslint-config-eslint": "^2.0.4",
		"@use-pico/tsconfig": "^2.0.4",
		"@types/node": "^20.9.0",
		"@types/react": "^18.2.33",
		"concurrently": "^8.2.1",
		"del-cli": "^5.0.0",
		"eslint": "^8.51.0",
		"typescript": "^5.3.2"
	},
	"bugs": {
		"url": "https://github.com/use-pico/pico/issues"
	},
	"homepage": "https://github.com/use-pico/pico#readme"
