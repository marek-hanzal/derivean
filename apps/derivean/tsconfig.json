{
	"compilerOptions": {
		"target": "ES2021",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true,
		"disableSolutionSearching": true,
		"checkJs": true,
		"diagnostics": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "ES2020",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": "src",
		"paths": {
			"@/derivean/*": [
				"./*"
			]
		},
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"dist/types/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"tmp"
	]
}
