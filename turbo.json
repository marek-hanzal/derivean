{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": ["tsconfig.json"],
	"tasks": {
		"wasm": { "dependsOn": [], "cache": false },
		"dev": { "dependsOn": ["^wasm"], "cache": false, "persistent": true },
		"lint": {
			"dependsOn": ["^lint"],
			"outputs": [],
			"inputs": ["src/**"],
			"outputLogs": "new-only",
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^wasm", "^typecheck"],
			"outputs": [],
			"inputs": ["src/**"],
			"outputLogs": "new-only",
			"cache": false
		},
		"build": {
			"dependsOn": ["^wasm", "^build", "typecheck"],
			"outputs": ["dist/**", ".next/**", "build/**"],
			"cache": false
		},
		"translations": { "cache": false }
	}
}
