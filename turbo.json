{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": ["tsconfig.json"],
	"tasks": {
		"dev": { "cache": false, "persistent": true },
		"lint": {
			"dependsOn": ["^lint"],
			"outputs": [],
			"inputs": ["src/**"],
			"outputLogs": "new-only",
			"cache": false
		},
		"typecheck": {
			"dependsOn": ["^typecheck"],
			"outputs": [],
			"inputs": ["src/**"],
			"outputLogs": "new-only",
			"cache": false
		},
		"build": { "dependsOn": ["^lib", "^build"], "cache": false },
		"lib": { "dependsOn": ["^lib"], "cache": false },
		"translations": { "cache": false }
	}
}
