{
	"name": "@marek-hanzal/derivean",
	"private": true,
	"description": "A little experiment with Vite, React, and Three.js",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/marek-hanzal/derivean.git"
	},
	"scripts": {
		"dev": "turbo run dev --parallel --no-daemon",
		"lint": "turbo run lint --force --no-daemon",
		"build": "turbo run build --force --no-daemon",
		"typecheck": "turbo run typecheck --no-daemon",
		"translations": "turbo run translations --no-daemon"
	},
	"workspaces": [
		"apps/*",
		"lib/**/*",
		"packages/**/*"
	],
	"devDependencies": {
		"@types/node": "^22.13.8",
		"prettier": "^3.5.3",
		"turbo": "^2.4.4",
		"typescript": "^5.8.2"
	},
	"packageManager": "bun@1.2.2"
}
